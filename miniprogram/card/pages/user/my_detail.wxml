<view wx:if="{{isLoad===null}}" class="margin-top load notexist text-l text-darkgreen color-skin1"></view>
<view wx:if="{{isLoad===false}}" class="margin-top load loading text-l text-darkgreen color-skin1"></view>

<view wx:if="{{isLoad&&isLogin}}" class="main main-user-detail main-skin1">

	<view class="top bg-skin1">

	</view>

	<view class="card-line"></view>
	<view class="content">

		<view class="list">

			<view class="card super-card"> 
				<view class="card-name">
					<view class="card-name-item">
						<text class="name">{{user.USER_NAME}}</text>
						<text class="duty text-cut">{{user.USER_COMPANY}} | {{user.USER_COMPANY_DUTY}}</text>
					</view>
					<image   mode="aspectFill" src="{{user.USER_PIC}}"></image>
				</view>

				<view class="card-x"></view>
				<view class="card-desc">
					<text class="text-cut">Mobile：{{user.USER_MOBILE}}</text>
					<text class="text-cut">Email：{{user.USER_EMAIL}}</text>
					<text class="text-cut">Wechat：{{user.USER_WECHAT}}</text>
				</view>
			</view>

			<view class="share-card-box">
				<button open-type="share" class="btn bg-blue share-card"><text class="icon-share"></text>分享名片</button> 
			</view>

			<!-- user base begin -->
			<block>
				<view class="user-base  shadow">
					<view class="base-item">
						<view class="left">
							<text class="icon-head icon-rounddown margin-right-xs"></text>
							<text class="icon-head-text">详细信息</text>
						</view>
						<view class="right"></view>
					</view> 
					<view class="base-item">
						<view class="left">院系专业</view>
						<view class="right">{{user.USER_ITEM}} ({{user.USER_ENROLL}}-{{user.USER_GRAD}})</view>
					</view> 
					<view class="base-item">
						<view class="left">所在城市</view>
						<view class="right">{{user.USER_CITY}}</view>
					</view>

					<view class="base-item">
						<view class="left">就读学历</view>
						<view class="right">{{user.USER_EDU}}</view>
					</view>

					<view class="base-item">
						<view class="left">当前行业</view>
						<view class="right">{{user.USER_TRADE}}</view>
					</view>

					<view class="base-item">
						<view class="left">最近活跃</view>
						<view class="right"><text user-select="true">{{user.USER_LOGIN_TIME}}</text></view>
					</view>

					<view class="base-item">
						<view class="left">QQ号码</view>
						<view class="right"><text user-select="true">{{user.USER_QQ}}</text></view>
					</view>

				</view>
				<!-- user work END -->


				<!-- user desc begin -->
				<view class="user-base  shadow">
					<view class="base-item">
						<view class="left">
							<text class="icon-head icon-rounddown margin-right-xs"></text>
							<text class="icon-head-text">自我介绍</text>
						</view>
						<view class="right"></view>
					</view> 
					<view class="base-item"> 
						<view ><text user-select="true" class="text-content">{{user.USER_DESC}}</text>
						</view>
					</view>
				</view>

				<view class="user-base  shadow">
					<view class="base-item">
						<view class="left">
							<text class="icon-head icon-rounddown margin-right-xs"></text>
							<text class="icon-head-text">资源与需求</text>
						</view>
						<view class="right"></view>
					</view> 
					<view class="base-item"> 
						<view><text user-select="true" class="text-content">{{user.USER_RESOURCE}}</text>
						</view>
					</view>
				</view>
				<!-- user desc END -->
			</block>



		</view>
	</view>
</view>

<!--回页首 begin-->
<import src="../../ccmini-tpls/public/top_tpl.wxml" />
<template is="topTpl" data="{{topBtnShow,bottom:100}}" />
<!--回页首 end-->


<import src="../../ccmini-tpls/public/menu_tpl.wxml" />
<template is="menuTpl"   data="{{setup, curMenu:'my_detail'}}" />