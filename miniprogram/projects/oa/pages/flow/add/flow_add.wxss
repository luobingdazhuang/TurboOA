@import "../../../../../style/public/detail.wxss";
@import "../../../style/skin.wxss";

page {
	background-image: linear-gradient(180deg, var(--projectColor), #F5F5F5, #F5F5F5);
	background-repeat: no-repeat;
	--TextColor: #5cc9e4;
}

.load-project {
	color: #fff !important;
} 

@keyframes shine {
	0% {
		background-position: 100% 0;
	}

	100% {
		background-position: -190% 0;
	}
}

.flow-title {
	width: 100%;
	font-size: 24rpx;
	color: #999;
	padding: 30rpx 0 0 20rpx;
	text-align: left;
}

.flow-line {
	width: 100%;
	display: flex;
	align-items: center;
	padding: 20rpx 20rpx;
	flex-wrap: wrap;
}

.flow-line .item {
	padding: 4rpx 10rpx;
	border-radius: 30rpx;
	background-color: #fff;
	font-size: 24rpx;
	margin-right: 10rpx;
	color: var(--projectColor);
	margin-bottom: 20rpx;
	display: flex;
	align-items: center;
}

.flow-line .item>text {
	background-color: #157bf76c;
	height: 24rpx;
	width: 24rpx;
	border-radius: 50%;
	margin-right: 6rpx;
	color: #fff;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 20rpx;
}