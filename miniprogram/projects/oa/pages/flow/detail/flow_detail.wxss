@import "../../../style/skin.wxss";

.process-box {
	width: 100%;
	display: flex;
	padding: 30rpx 0 20rpx;
	justify-content: space-evenly;
}

.process-box .arrow {
	display: flex;
	height: 100rpx;
	align-items: center;
	justify-content: center;
	color: #ccc;
	font-size: 24rpx;
}

.process-box .item {
	display: flex;
	flex-direction: column;
	position: relative;
	text-align: center;
}

.process-box .item .txt {
	font-size: 26rpx;
	color: #999;
	min-width: 100rpx;
	height: 100rpx;
	display: flex;
	flex-direction: column;
	background-color: #fff;
	align-items: center;
	justify-content: center;
	padding: 0 14rpx;
	border-radius: 4rpx;
	border-top-right-radius: 20rpx;
	border-bottom-left-radius: 20rpx;
}

.process-box .item .status {
	width: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
}

.process-box .item .status .icon-triangleupfill {
	margin-top: -16rpx;
	font-size: 70rpx;
	color: var(--blue);
}

.process-box .item .status .icon-roundclose {
	margin-top: 6rpx;
	font-size: 36rpx;
	color: var(--orange);
}

.info-box {
	width: 100%;
	background-color: #fff;
	display: flex;
	flex-direction: column;
	margin-top: 0rpx !important;
	padding: 20rpx 10rpx;
	position: relative;
	border-top-left-radius: 20rpx;
	border-top-right-radius: 20rpx;
}

.info-box::after {
	content: '';
	position: absolute;
	height: 10rpx;
	width: 100%;
	left: 0;
	bottom: -10rpx;
	background-image: radial-gradient(10px circle at 10px 5px, transparent 10rpx, #ffffff 10rpx);
	background-size: 30rpx 10rpx;
} 

.info-box .title {
	width: 100%;
	font-size: 28rpx;
	text-align: center;
	padding: 10rpx 0 20rpx;
	color: #777;
	border-bottom: 2rpx dashed #ccc;
	margin-bottom: 20rpx;
}

.info-box .list {
	width: 100%;
	display: flex;
	flex-direction: column;
}

.info-box .list .item {
	width: 100%;
	padding: 16rpx 10rpx;
	font-size: 26rpx;
	display: flex;
	align-items: baseline;
	border-bottom: 2rpx dashed #eee;
}

.info-box .list .item:last-child {
	border-bottom: 0;
}

.info-box .list .item .left {
	width: 160rpx;
	text-align: right;
	color: #000;
	margin-right: 40rpx;
}

.info-box .list .item .right {
	flex: 1;
	color: #666;
}

.info-box .list .item.img {
	align-items: flex-start;
}


.info-box .list .item.img .right>image {
	width: 100rpx;
	height: 100rpx;
	border-radius: 6rpx;
	margin-right: 10rpx;
}

.file-box {
	width: 100%;
	display: flex;
	flex-direction: column;
}

.file-box .file-box-item {
	width: 100%;
	padding: 10rpx 10rpx;
	border-bottom: 2rpx dashed #eee;
	font-size: 24rpx;
	display: flex;
	align-items: baseline;
	flex-wrap: wrap;
}

.file-box .file-box-item image {
	width: 30rpx;
	height: 30rpx;
	margin-right: 6rpx;
}

.file-box .file-box-item .name {
	flex: 1;
	word-wrap: break-word;
	word-break: break-all;
	white-space: pre-line;
}

.oprt {
	width: 100%;
	display: flex;
	padding: 10rpx 30rpx;
	justify-content: space-evenly;
}

.oprt>view {
	font-size: 36rpx;
	padding: 20rpx 50rpx;
	border-radius: 20rpx;
}

.step-box {
	width: 100%;
	min-height: 150rpx;
	margin: 40rpx auto;
	display: flex;
	flex-direction: column;
	position: relative;
	padding: 30rpx 30rpx;
	background-color: #fff;
	border-bottom-left-radius: 20rpx;
	border-bottom-right-radius: 20rpx;
} 

.step-box::before {
	content: '';
	position: absolute;
	height: 10rpx;
	width: 100%;
	left: 0;
	top: -10rpx;
	background-image: radial-gradient(10px circle at 10px 0px, transparent 10rpx, #ffffff 10rpx);
	background-size: 30rpx 10rpx;
} 

.step-box .list {
	width: 100%;
	height: 100%;
	margin: 0 auto;
}

.step-box .list .item {
	display: flex;
	height: 100%;
	z-index: 1119;
}

.step-box .list .item .left {
	position: relative;
}

.step-box .list .item .left .num {
	height: 55rpx;
	width: 55rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	border-radius: 50%;
	color: #333;
	background-color: #ccc;
	font-size: 26rpx;
}

.step-box .list .item .left .line {
	height: 100%;
	background-color: #ccc !important;
	width: 2rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	position: absolute;
	top: 55rpx;
	left: 50%;
	transform: translateX(-50%);
}

.step-box .list .item:last-child .left .line {
	width: 0rpx;
}

.step-box .list .item .right {
	width: 100%;
	height: 100%;
	margin-left: 20rpx;
	position: relative;
	padding: 0rpx 0rpx 20rpx;
}

.step-box .list .item .right .title {
	width: fit-content;
	display: flex;
	justify-content: center;
	align-items: center;
	border-radius: 10rpx;
	background-color: #ccc;
	margin-bottom: 20rpx;
	padding: 8rpx 20rpx;
	font-size: 24rpx;
}

.step-box .list .item .right .detail .content {
	font-size: 24rpx;
	height: 100%;
	color: #666;
	padding: 4rpx 0;
}

.step-box .list .item .right .detail .img {
	width: 200rpx;
	height: 200rpx;
	border-radius: 6rpx;
}

.form-group textarea {
	background-color: #F6F5FA !important;
	padding: 16rpx;
	border-radius: 10rpx;
}